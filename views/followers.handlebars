<div class="container">
  <h1 class="text-center">Followers of:
    <a href="/users/profile/{{ username }}">{{ username }}</a>
  </h1>

  {{!-- TODO: Change to responsive cards rows --}} {{# each following }}
  <div class="row">
    <div class="col-sm-1 col-lg-3"></div>
    <div class="col-sm-10 col-lg-6">
      <div class="card text-center">
        <div class="card-body text-left">
          <h5 class="card-text">
            <a href="/users/profile/{{ this.username }}" style="font-weight: 700;">{{ this.username }}</a>
            {{ this.firstname }} {{ this.lastname }}
          </h5>
        </div>
        <div class="card-footer text-muted">
          {{#if this.isUser}}
          <span></span>
          {{else}} {{#if this.followingUser}}
          <a href="/users/follow/followers/{{ this._id }}/{{ ../username }}" class="btn btn-danger btn-md " style="margin: 0 auto;">Unfollow</a>
          {{else}}
          <a href="/users/follow/followers/{{ this._id }}/{{ ../username }}" class="btn btn-success btn-md " style="margin: 0 auto;">Follow</a>
          {{/if}} {{/if}}
        </div>
      </div>

    </div>
    <div class="col-sm-1 col-lg-3"></div>
  </div>

  </br>
  {{/each}}

</div>