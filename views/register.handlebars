<div class="container">
    <div class="row">
        <div class="col-sm-0 col-md-1 col-lg-3"></div>
        <div class="col-sm-12 col-md-10 col-lg-6">
            <form action="/users/register" method="POST" class="p-2 m-2" style="background-color: rgba(0,0,0,.03); border-radius: 6px; border: 1px solid rgba(0,0,0,.125);">
                <h1>Register</h1>
                <div class="form-group">
                    <label>First Name:</label>
                    <input name="firstname" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input name="lastname" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Username:</label>
                    <input name="username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input name="email" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input name="password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <label>Confirm Password:</label>
                    <input name="password2" type="password" class="form-control">
                </div>
                <input type="submit" value="Submit" class="btn btn-success" style="width: 100%;">
            </form>
        </div>
        <div class="col-sm-0 col-md-1 col-lg-3"></div>
    </div>



</div>