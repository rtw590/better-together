<div class="container">
  <h1>Profile of {{ user.firstname }}</h1>

  <div class="container">

    {{# each posts }}
    <div class="ml-5">
      <h1>{{ this.body }}</h1>
      <a href="/users/profile/{{ this.username }}">{{ this.username }}</a>
      <br>
    </div>
    <div class="divider"></div>
    {{/each}}

    <form action="/wallPosts/add" method="POST">
      <h1>Add Post</h1>
      <div class="form-group">
        <label>Message:</label>
        <textarea name="body" style="width:100%">{{body}}</textarea>
      </div>
      <div class="form-group">
        <label>profilePostedOn:</label>
        <textarea name="profilePostedOn" style="width:100%">{{user.username}}</textarea>
      </div>
      <input type="submit" value="Submit" class="btn btn-warning">
    </form>

  </div>




</div>

