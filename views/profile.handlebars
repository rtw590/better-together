<div class="container">
  {{!-- Section For Profile Picture and username --}} {{!-- TODO: Make the image work better when resized and for different
  photo ratios --}}
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <img src="/images/placeholder.jpg" class="img-fluid rounded" alt="Responsive image">
      <h1 class="text-center" style="margin-bottom: 0px">{{ userProfile.username }}</h1>
      <div class="row mb-2">
        <div class="col text-center">
          <a href="#">Followers</a>
        </div>
        <div class="col">
          <a href="#">Following</a>
        </div>
      </div>

    </div>
    <div class="col-4"></div>
  </div>


  {{!-- Div to hold submit new comment and all comments --}}
  <div class="row">
    <div class="col-sm-1 col-lg-2"></div>
    <div class="col-sm-10 col-lg-8">

      {{!-- div to hold new comment form --}}
      <div class="card text-center">
        <div class="card-header text-left">
          What would you like to say?
        </div>
        <div class="card-body">
          <form action="/wallPosts/add/{{ userProfile.username }}" method="POST">
            <div class="form-group">
              <textarea name="body" style="width:100%">{{body}}</textarea>
            </div>
            <input type="submit" value="Post" style="width:65%" class="btn btn-success">
          </form>
        </div>

      </div>

      {{!-- Div to display all wall posts --}}
      <br> {{# each posts }}
      <div class="card text-center">
        <div class="card-header text-left">
          Posted by:
          <a href="/users/profile/{{ this.username }}">{{ this.username }}</a>
        </div>
        <div class="card-body">
          <h5 class="card-text">{{ this.body }}</h5>
        </div>
        <div class="card-footer text-muted">
          Like
          <button type="button" class="btn btn-success">

            <span class="badge badge-light">{{ this.likes }}</span>
          </button>
        </div>
      </div>
      <br> {{/each}}
    </div>
    <div class="col-sm-1 col-lg-2"></div>
  </div>



</div>