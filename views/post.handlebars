 <div class="container">

     <h1>{{ post.title }}</h1>
     <h3>{{ post.body }}</h3>
     <h5>Posted By: {{ post.author }}</h5>

     <hr>

     <a href="/posts/edit/{{ post._id }}" class="btn btn-primary">Edit Post</a>

     <hr>

    <form action="/posts/comment/{{ post._id }}" method="POST">
        <h1>Add Comment</h1>
        <div class="form-group">
            <label>Body:</label>
            <textarea name="body" style="width:100%;"></textarea>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
     </form>

     <hr>

     <h1>Comments</h1>

     <ul>
        {{#each post.comments}}
            <li>{{ this.body }}</li>
        {{/each}}
    </ul>

</div>
