 <div class="container">

     <h1>{{ post.title }}</h1>
     <h3>{{ post.body }}</h3>
     <h5>Posted By: {{ post.author }}</h5>

    <form action="/posts/comment/{{ post._id }}" method="POST">
        <h1>Add Comment</h1>
        <div class="form-group">
            <label>Body:</label>
            <textarea name="body" ></textarea>
        </div>
        <input name="article" type="text" class="form-control" disabled value="{{ post._id }}">
        <input type="submit" value="Submit" class="btn btn-primary">
     </form>

</div>
